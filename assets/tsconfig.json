{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@*": ["js*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
